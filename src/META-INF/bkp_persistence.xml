<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

	<persistence-unit name="default"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.odontologic.model.Paciente</class>
		<class>br.com.odontologic.model.Odontologo</class>
		<class>br.com.odontologic.model.Endereco</class>
		<class>br.com.odontologic.model.Convenio</class>
		<class>br.com.odontologic.model.Estado</class>
		<class>br.com.odontologic.model.Cidade</class>
		<class>br.com.odontologic.model.Usuario</class>
		<class>br.com.odontologic.model.Servico</class>
		<class>br.com.odontologic.model.Consultorio</class>
		<class>br.com.odontologic.model.Consulta</class>
		<class>br.com.odontologic.model.Receber</class>
		<class>br.com.odontologic.model.ConsultaServico</class>
		
		
		<properties>

			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="odontologic123" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/odontologic" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="show_sql" value="false" />
			<property name="format_sql" value="true" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.use_sql_comments" value="true" />
			<property name="hibernate.format_sql" value="true" />
			


		</properties>
	</persistence-unit>

</persistence>